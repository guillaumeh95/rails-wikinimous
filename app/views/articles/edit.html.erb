<h1>Editing Article</h1>

<%= form_for(@article) do |f| %>
  <div class="form-group">
    <p><%= f.label :title %></p>
    <p class="form-control"><%= f.text_field :title %></p>
  </div>
  <div class="form-group">
    <p><%= f.label :content %></p>
    <p><%= f.text_field :content %></p>
  </div>
    <div>
      <%= f.submit %>
  </div>
<% end %>
<p>
  <%= link_to "Show", article_path %> | <%= link_to "Back", articles_path %>
</p>
